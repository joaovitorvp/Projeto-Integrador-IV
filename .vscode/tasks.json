{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Projeto (JUnit 5)",
            "type": "shell",
            "command": "javac",
            "args": [
                "-cp",
                "lib/junit-platform-console-standalone-1.9.3.jar:lib/hamcrest-core-1.3.jar:.",
                "Calculadora.java",
                "CalculadoraTeste.java"
            ],
            "group": { "kind": "build", "isDefault": true },
            "presentation": { "echo": true, "reveal": "always", "panel": "shared" }
        },
        {
            "label": "Executar Testes (JUnit 5)",
            "type": "shell",
            "command": "java",
            "args": [
                "-jar",
                "lib/junit-platform-console-standalone-1.9.3.jar",
                "--class-path",
                ".",
                "--scan-classpath"
            ],
            "dependsOn": "Compilar Projeto (JUnit 5)",
            "group": { "kind": "test", "isDefault": true },
            "presentation": { "echo": true, "reveal": "always", "panel": "shared" }
        },
        {
            "label": "Executar Calculadora",
            "type": "shell",
            "command": "java",
            "args": ["-cp", ".", "Calculadora"],
            "group": { "kind": "build" },
            "presentation": { "echo": true, "reveal": "always", "panel": "shared" }
        }
    ]
}
